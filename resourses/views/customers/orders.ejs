<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">All orders</h1>
        <% if(messages.success) { %>
        <div class="flex items-center bg-green-500 text-white text-sm font-bold px-4 py-2 " id="success-alert">
            <i class="fa fa-bell px-2 font-bold"></i>
            <p class="font-italic"><%= messages.success %></p>
        </div>
        <% } %>
        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="text-left border px-4 py-2">Orders</th>
                    <th class="text-left border px-4 py-2">Phone</th>
                    <th class="text-left border px-4 py-2">Address</th>
                    <th class="text-left border px-4 py-2">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders.length) { %>
                <% orders.forEach((order) => { %>
                <tr>
                    <td class="border px-4 py-2">
                        <a class="link" href="/"><%= order._id%></a>
                    </td>
                    <td class="border px-4 py-2">
                        <%= order.phone %>
                    </td>
                    <td class="border px-4 py-2">
                        <%= order.address %>
                    </td>
                    <td class="border px-4 py-2">
                        <%= moment(order.createdAt).format('hh:mm A') %>
                    </td>
                </tr>
                <% }) %>
                <% } else { %>
                <div class="text-center mx-auto">
                    <p class="text-xl">Orders Not Found</p>
                </div>
                <% } %>
            </tbody>
        </table>
    </div>
</section>