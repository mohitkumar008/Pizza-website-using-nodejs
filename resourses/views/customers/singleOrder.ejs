<section class="status">
    <div class="container mx-auto pt-12">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between">
                <h1 class="text-xl font-bold">Track Delivery Status</h1>
                <h6 class="bg-white p-1 px-4 text-green-600 text-sm rounded-full"><%= order._id %></h6>
                <input type="hidden" id="hiddenInput" value="<%= JSON.stringify(order) %>">
            </div>
            <ul class="pt-12">
                <li class="status_line text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status_line text-xl pb-16" data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status_line text-xl pb-16" data-status="prepared"><span>Preperation</span></li>
                <li class="status_line text-xl pb-16" data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status_line text-xl" data-status="completed"><span>Delivered</span></li>
            </ul>
        </div>    
    </div>
</section>