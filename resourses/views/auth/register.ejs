<section class="register">

<div class=" flex flex-col justify-center bg-gray-50 pt-12 pb-4 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white mx-auto shadow-md p-6">
      <div>
        <img class="mx-auto h-24 w-auto" src="/img/logo.png" alt="Workflow">
        <h5 class="text-center font-extrabold font-primary">PizzaHut</h5>
        <h2 class="mt-2 text-center text-3xl font-extrabold text-gray-900">
          Sign up for create account
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600"></p>
      </div>
      <form class="mt-8 space-y-6" action="/register" method="POST">
        <input type="hidden" name="remember" value="true">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="name" class="sr-only">Name</label>
            <input id="name" name="name" value="<%= messages.name %>" type="text" autocomplete="name"  class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Name">
          </div>
          <div>
            <label for="email-address" class="sr-only">Email address</label>
            <input id="email-address" value="<%= messages.email %>" name="email" type="email" autocomplete="email"  class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input id="password" name="password" type="password" autocomplete="current-password"  class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
          </div>
        </div>
        <% if (messages.error) { %>
        <span class="text-red-500 text-sm">*<%= messages.error %></span>
          <% } %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
            <label for="remember_me" class="ml-2 block text-sm text-gray-900">
              Remember me
            </label>
          </div>
  
          <div class="text-sm">
            <a href="/login" class="font-medium font-primary">
              Already have account?
            </a>
          </div>
        </div>
  
        <div>
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white btn-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Sign up</button>
        </div>
      </form>
    </div>
    <p class="max-w-md mx-auto mt-6 text-center text-xs text-gray-500">
        &copy;2021 <span class="font-primary">Mohit Prajapati</span> All rights reserved.
    </p>
  </div>
  
</section>